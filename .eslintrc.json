{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"es6": true,
		"jquery": true,
		"commonjs": true
	},
	"extends": ["airbnb-base", "prettier", "gsap", "eslint-config-prettier"],
	"globals": {
		"gsap": true,
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": "error",
		"no-unused-vars": "warn",
		"no-console": "off",
		"func-names": "off",
		"no-process-exit": "off",
		"object-shorthand": "off",
		"class-methods-use-this": "off",
		"global-require": "off",
		"import/no-unresolved": "off",
		"no-underscore-dangle": "off",
		"no-class-assign": "off",
		"import/no-named-as-default": "off",
		"dot-notation": "off",
		"prefer-template": "off",
		"no-plusplus": "off",
		"prefer-rest-params": "off"
	},
	"plugins": [
		"babel",
		"prettier"
	]
}
